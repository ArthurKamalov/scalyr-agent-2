    $version_second_part=$version_numbers[-1];
    $pattern=$version_first_part.Trim() + "\.[a-zA-Z]+[0-9]+\." + $version_second_part.Trim();
    $pattern=$pattern.Trim()

    if ("$status_output" -notmatch $pattern)
    {
        Throw "Can not find a matching version.";
    }
};

